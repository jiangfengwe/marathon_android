<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/layout_hotel_detail_head"
        android:layout_width="match_parent"
        android:layout_height="160dp">
        <ImageView
            android:id="@+id/iv_hotel_head_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/hotel" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white_event_time">
            <TextView
                android:id="@+id/tv_hotel_head_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="贵阳7天连锁酒店"
                android:textColor="@color/white"
                android:textSize="18sp" />
            <LinearLayout
                android:id="@+id/layout_hotel_detail_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_hotel_pic"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/hotel_pic"
                    android:layout_marginRight="2dp"/>
                <TextView
                    android:id="@+id/hotel_pic_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="12"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/hotel_location"
            android:layout_gravity="center"
            android:layout_marginRight="3dp"/>
        <TextView
            android:id="@+id/tv_hotel_head_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="贵阳数字经济产业园"
            android:textSize="12sp"
            android:textColor="@color/hotel_address"
            android:layout_gravity="center"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <View
            android:layout_width="0.3dp"
            android:layout_height="29dp"
            android:layout_gravity="center"
            android:layout_marginRight="25dp"
            android:background="@color/hotel_phone_division"/>
        <ImageView
            android:id="@+id/iv_hotel_head_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hotel_phone"
            android:layout_marginRight="25dp"
            android:layout_gravity="center"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/hotel_division"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/hotel_intro_title"
            android:text="@string/hotel_detail_intro"
            android:textSize="14sp"
            android:layout_height="35dp"
            android:gravity="center"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/tv_hotel_head_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:padding="10dp"
            android:background="@color/hotel_division"
            android:ellipsize="end"
            android:textColor="@color/hotel_detail_intro"
            android:layout_marginBottom="12dp"
            android:text="eeeeeeeeeeeeeeeeeeeeee"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/hotel_division"
        android:layout_height="7dp"/>

</LinearLayout>