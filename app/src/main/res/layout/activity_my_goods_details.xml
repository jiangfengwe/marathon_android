<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_goods_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tdin360.zjw.marathon.ui.activity.MyGoodsDetailsActivity">

    <include layout="@layout/toolbar_layout"></include>

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <LinearLayout
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="match_parent">


         <TableLayout
             android:shrinkColumns="0"
             android:padding="10dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

             <TableRow android:padding="5dp">

                 <TextView
                     android:textSize="16sp"

                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="姓名:"
                     />
                 <TextView
                     android:id="@+id/name"
                     android:textColor="@color/textBlack"
                     android:textSize="15sp"
                     android:layout_marginLeft="5dp"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="张三"
                     />

             </TableRow>
             <View
                 android:background="@color/lineColor"
                 android:layout_height="0.5dp"
                 android:layout_width="match_parent">

             </View>
             <TableRow android:padding="5dp">

                 <TextView
                     android:textSize="16sp"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="性别:"
                     />
                 <TextView
                     android:id="@+id/sex"
                     android:textColor="@color/textBlack"
                     android:layout_marginLeft="5dp"
                     android:textSize="15sp"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="男"
                     />

             </TableRow>
             <View
                 android:background="@color/lineColor"
                 android:layout_height="0.5dp"
                 android:layout_width="match_parent">

             </View>
             <TableRow android:padding="5dp">

                 <TextView

                     android:textSize="16sp"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="证件号码:"
                     />
                 <TextView
                     android:id="@+id/iDNumber"
                     android:textColor="@color/textBlack"
                     android:layout_marginLeft="5dp"
                     android:textSize="15sp"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="xxxx"
                     />

             </TableRow>
             <View
                 android:background="@color/lineColor"
                 android:layout_height="0.5dp"
                 android:layout_width="match_parent">

             </View>
             <TableRow android:padding="5dp">

                 <TextView
                     android:textSize="16sp"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="参赛号码:"
                     />
                 <TextView
                     android:id="@+id/numBer"
                     android:layout_marginLeft="5dp"
                     android:textSize="15sp"
                     android:textColor="@color/textBlack"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="0000"
                     />

             </TableRow>
             <View
                 android:background="@color/lineColor"
                 android:layout_height="0.5dp"
                 android:layout_width="match_parent">

             </View>
             <TableRow android:padding="5dp">

                 <TextView
                     android:textSize="16sp"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="服装尺码:"
                     />
                 <TextView
                     android:id="@+id/clothesSize"
                     android:layout_marginLeft="5dp"
                     android:textColor="@color/textBlack"
                     android:textSize="15sp"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="xxl"
                     />

             </TableRow>
             <View
                 android:background="@color/lineColor"
                 android:layout_height="0.5dp"
                 android:layout_width="match_parent">

             </View>
         </TableLayout>
          <TextView
              android:layout_marginLeft="10dp"
              android:textStyle="bold"
              android:textColor="@color/textBlack"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="领取时间:"
              />
            <TextView
                android:id="@+id/time"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2017-04-30  9:00 － 18:00"
                />

          <TextView
              android:layout_marginTop="15dp"
              android:layout_marginLeft="10dp"
              android:textStyle="bold"
              android:textColor="@color/textBlack"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="领取方式:"
              />

          <TableLayout
              android:shrinkColumns="0"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <TableRow
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  >

                  <TextView
                      android:textColor="@color/textBlack"
                      android:textSize="14sp"
                      android:padding="5dp"
                      android:layout_width="match_parent"
                      android:text="1.现场领取:"
                      />
                  <TextView
                      android:textColor="@color/textBlack"
                      android:textSize="14sp"
                      android:padding="5dp"
                      android:layout_width="match_parent"
                      android:text="领取地点"
                      />
              </TableRow>


          </TableLayout>
          <LinearLayout
              android:layout_marginLeft="15dp"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <TextView
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:textColor="@color/textBlack"
                  android:textSize="12sp"
                  android:text="需要携带材料:"
                  />
              <TextView
                  android:layout_height="wrap_content"
                  android:layout_width="match_parent"
                  android:text="1.材料1，2.材料二"
                  />

          </LinearLayout>
          <LinearLayout
              android:layout_marginTop="20dp"
              android:layout_marginLeft="10dp"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <TextView

                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:textColor="@color/textBlack"
                  android:textSize="14sp"
                  android:text="2.快递领取:"
                  />
              <TextView
                  android:layout_height="wrap_content"
                  android:layout_width="match_parent"
                  android:text="1.填写快递申请单，2.支付快递费用"
                  />

          </LinearLayout>
          <LinearLayout
              android:padding="10dp"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <Button
                  android:onClick="click"
                  android:background="@drawable/oval_red_button_selector"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textColor="@color/white"
                  android:textSize="16sp"
                  android:text="申请快递"
                  />

          </LinearLayout>
      </LinearLayout>
  </ScrollView>
</LinearLayout>
