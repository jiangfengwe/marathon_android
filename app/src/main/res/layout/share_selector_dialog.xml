<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:background="@color/colorPrimaryDark"
        android:padding="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:text="分享"
        />
    <View
        android:layout_width="match_parent"
        android:background="@android:color/darker_gray"
        android:layout_height="0.5dp"></View>


        <TextView
            android:background="@drawable/personal_center_item_selector"
            android:gravity="center_vertical"
            android:id="@+id/share1"
            android:padding="10dp"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/share_weixin_friends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="微信朋友圈"

            />
        <View
            android:layout_width="match_parent"
            android:background="@android:color/darker_gray"
            android:layout_height="0.5dp"></View>
    <TextView
        android:drawablePadding="5dp"
        android:background="@drawable/personal_center_item_selector"
        android:gravity="center_vertical"
        android:id="@+id/share2"
        android:padding="10dp"
        android:drawableLeft="@drawable/share_weixin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="微信好友"

        />
    <View
        android:layout_width="match_parent"
        android:background="@android:color/darker_gray"
        android:layout_height="0.5dp"></View>
    <TextView
        android:background="@drawable/personal_center_item_selector"
        android:gravity="center_vertical"
        android:id="@+id/share3"
        android:padding="10dp"
        android:drawablePadding="5dp"
        android:drawableLeft="@drawable/share_weixin_sc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="微信收藏"

        />
    <View
        android:layout_width="match_parent"
        android:background="@android:color/darker_gray"
        android:layout_height="0.5dp"></View>
    <TextView
        android:background="@drawable/personal_center_item_selector"
        android:gravity="center_vertical"
        android:id="@+id/share4"
        android:padding="10dp"
        android:drawablePadding="5dp"
        android:drawableLeft="@drawable/share_qq_zone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="QQ空间"

        />
    <View
        android:layout_width="match_parent"
        android:background="@android:color/darker_gray"
        android:layout_height="0.5dp"></View>
    <TextView
        android:background="@drawable/personal_center_item_selector"
        android:gravity="center_vertical"
        android:id="@+id/share5"
        android:padding="10dp"
        android:drawablePadding="5dp"
        android:drawableLeft="@drawable/share_qq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="QQ好友"

        />
    <View
        android:layout_width="match_parent"
        android:background="@android:color/darker_gray"
        android:layout_height="0.5dp"></View>
    <TextView
        android:background="@drawable/personal_center_item_selector"
        android:gravity="center_vertical"
        android:id="@+id/share6"
        android:padding="10dp"
        android:drawablePadding="5dp"
        android:drawableLeft="@drawable/share_sina_weibo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="新浪微博"

        />
    <View
        android:layout_width="match_parent"
        android:background="@android:color/darker_gray"
        android:layout_height="0.5dp"></View>
    <TextView
        android:background="@drawable/personal_center_item_selector"
        android:gravity="center"
        android:id="@+id/cancel"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="取消"

        />
</LinearLayout>