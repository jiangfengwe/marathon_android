<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tdin360.zjw.marathon.ui.activity.HotelRoomSubmitActivity">
    <include layout="@layout/toolbar_layout"/>
    <com.tencent.smtt.sdk.WebView
        android:id="@+id/hotel_order_webview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        android:layout_weight="1">
        <include layout="@layout/item_hotel_order_detail"/>
    </ScrollView>
    <TextView
        android:id="@+id/tv_hotel_room_pay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="@string/my_order_pay"
        android:background="@color/home_tab_title_color_check"/>
</LinearLayout>
