<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:background="@color/hotel_division"
        android:layout_height="7dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
           android:id="@+id/tv_travel_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一个233条评论"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:textColor="@color/home_tab_title_color_check"/>
        <TextView
            android:id="@+id/tv_travel_comment_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.0"
            android:layout_gravity="center"
            android:textColor="@color/hotel_level"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分"
            android:layout_gravity="center"
            android:textColor="@color/hotel_level"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/hotel_division"
        android:layout_height="0.3dp"/>
    <LinearLayout
        android:id="@+id/layout_hotel_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_comment_head_pic"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/hotel_portrait"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_comment_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小李"
                android:textSize="12sp"
                android:textColor="@color/home_tab_title_color_check"/>
            <TextView
                android:id="@+id/tv_comment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-06-08"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/hotel_date"/>
            <TextView
                android:id="@+id/tv_comment_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/hotel_comment"
                android:textSize="14sp"
                android:text="ttttttttttttttttgggggggggggg"/>

        </LinearLayout>
    </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_hotel_detail_foot"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_check_more_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/home_tab_title_color_check"
            android:textSize="12sp"
            android:gravity="center"
            android:background="@drawable/shape_hotel_foot"
            android:text="@string/hotel_detail_comment"/>
    </LinearLayout>

</LinearLayout>