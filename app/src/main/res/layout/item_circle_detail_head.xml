<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_circle_detail_portrait"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/circle_portrait"
            android:layout_gravity="center"
            android:layout_marginRight="6dp"
            android:scaleType="centerCrop"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="荐客家"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="18dp"
            android:textSize="12sp"
            android:textColor="@color/home_tab_title_color_check"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12-12"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:textColor="@color/circle_head_time"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="荐客家神经病荐客家神经病荐客家神经病荐客家神经病荐客家神经病荐客家神经病荐客家神经病荐客家神经病荐客家神经病"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="14.7sp"
        android:textColor="@color/circle_head_time"/>
    <com.lzy.ninegrid.NineGridView
        android:id="@+id/circle_nineGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="6dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="76人赞过"
        android:textSize="10sp"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="10dp"
        android:textColor="@color/circle_head_time"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/circle_portrait"
            android:layout_margin="5dp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/circle_portrait"
            android:layout_margin="5dp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/circle_portrait"
            android:layout_margin="5dp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/circle_portrait"
            android:layout_margin="5dp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/circle_portrait"
            android:layout_margin="5dp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/circle_portrait"
            android:layout_margin="5dp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/circle_portrait"
            android:layout_margin="5dp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/circle_portrait"
            android:layout_margin="5dp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/circle_portrait"
            android:layout_margin="5dp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/circle_portrait"
            android:layout_margin="5dp"/>

        <ImageView
            android:id="@+id/iv_circle_detail_head_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:paddingLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/circle_detail_enter"/>
    </LinearLayout>
    </LinearLayout>
    <com.tencent.smtt.sdk.WebView
        android:id="@+id/wb_circle_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@color/hotel_division"/>

</LinearLayout>