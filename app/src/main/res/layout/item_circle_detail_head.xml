<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/layout_circle_detail"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_circle_detail_head_portrait"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/circle_portrait"
            android:layout_gravity="center"
            android:layout_marginRight="6dp"
            android:scaleType="centerCrop"/>
      <!--  <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_circle_detail_head_portrait"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="6dp"
            android:scaleType="centerCrop"
            fresco:roundAsCircle="true"
            fresco:placeholderImage="@drawable/my_portrait"/>-->
        <TextView
            android:id="@+id/tv_circle_detail_head_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="荐客家"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="18dp"
            android:textSize="12sp"
            android:textColor="@color/home_tab_title_color_check"/>
        <TextView
            android:id="@+id/tv_circle_detail_head_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:textColor="@color/circle_head_time"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_circle_detail_head_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="荐客家神经病荐客家神经病荐客家神经病荐客家神经病荐客家神经病荐客家神经病荐客家神经病荐客家神经病荐客家神经病"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="14.7sp"
        android:textColor="@color/circle_head_time"/>
    <com.lzy.ninegrid.NineGridView
        android:id="@+id/circle_detail_nineGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="6dp"/>
    <TextView
        android:id="@+id/tv_circle_detail_head_praise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="76"
        android:textSize="10sp"
        android:layout_marginTop="23dp"
        android:paddingLeft="10dp"
        android:textColor="@color/circle_head_time"/>
    <android.support.v7.widget.RecyclerView
            android:layout_margin="5dp"
            android:id="@+id/rv_circle_detail_head_portrait"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <com.tencent.smtt.sdk.WebView
        android:visibility="gone"
        android:id="@+id/wb_circle_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@color/hotel_division"/>

</LinearLayout>