<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/circle_portrait"
        android:scaleType="centerCrop"
        android:layout_marginTop="8dp"
        android:layout_marginRight="9dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_circle_message_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="就不要"
                android:textColor="@color/home_tab_title_color_check"
                android:layout_marginTop="11dp"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="赞了你："
                android:textColor="@color/hotel_address"
                android:layout_marginTop="11dp"
                android:textSize="14sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_marginTop="11dp"
            android:background="@color/background">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/travel"
                android:layout_marginLeft="11dp"
                android:layout_gravity="center"
                android:layout_marginRight="11dp"
                android:scaleType="centerCrop"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="...空间都不v用户积分不能觉得女方借口都女服举报女副"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:textColor="@color/circle_head_time"
                android:maxLines="1"
                android:ellipsize="end"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>