<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_circle_message"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/circle_portrait"
        android:scaleType="centerCrop"
        android:layout_marginTop="8dp"
        android:layout_marginRight="9dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_circle_message_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="就不要"
                android:textColor="@color/hotel_address"
                android:layout_marginTop="11dp"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tv_circle_message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="就不要"
                android:textColor="@color/hotel_address"
                android:layout_marginRight="10dp"
                android:layout_marginTop="11dp"

                android:textSize="14sp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_circle_message_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/theme_text"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="11dp"
            android:background="@color/background">
            <ImageView
                android:id="@+id/ic_circle_message_pic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/travel"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:scaleType="centerCrop"/>
            <TextView
                android:layout_margin="10dp"
                android:id="@+id/tv_circle_message_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:textColor="@color/theme_text"
                android:maxLines="1"
                android:ellipsize="end"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>