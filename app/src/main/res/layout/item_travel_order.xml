<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="20dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@drawable/order_bg"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/travel_order_pic"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:src="@drawable/travel"
                android:scaleType="centerCrop"
                android:layout_marginRight="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/travel_order_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/theme_text"
                    android:text="贵阳---千户苗寨"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:id="@+id/travel_order_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/hotel_size"
                        android:text="2人"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/home_tab_title_color_check"
                        android:text="￥"/>
                    <TextView
                        android:id="@+id/travel_order_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/home_tab_title_color_check"
                        android:text="234"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/order_bg_down">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/order_travel_date"
                android:textSize="14.7sp"
                android:paddingTop="20dp"
                android:paddingLeft="20dp"
                android:paddingBottom="10dp"
                android:textColor="@color/theme_text"/>
            <TextView
                android:id="@+id/travel_order_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2017-09-09 9:00~~2017-09-09 9:00"
                android:textSize="14.7sp"
                android:paddingTop="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:textColor="@color/hotel_size"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/order_travel_people"
                android:textSize="14.7sp"
                android:paddingTop="10dp"
                android:paddingLeft="20dp"
                android:paddingBottom="10dp"
                android:textColor="@color/theme_text"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小女"
                    android:textSize="14.7sp"
                    android:textColor="@color/hotel_size"/>
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14.7sp"
                    android:textColor="@color/hotel_size"
                    android:text="522527******4392"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小女"
                    android:textSize="14.7sp"
                    android:textColor="@color/hotel_size"/>
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14.7sp"
                    android:textColor="@color/hotel_size"
                    android:text="522527******4392"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_travel_phone"
                    android:textSize="14.7sp"
                    android:textColor="@color/theme_text"
                    android:layout_marginRight="20dp"/>
                <TextView
                    android:id="@+id/travel_order_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14.7sp"
                    android:textColor="@color/hotel_size"
                    android:inputType="number"
                    android:maxLength="11"
                    android:text="18840832741"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="20dp"
                android:paddingBottom="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_hotel_number"
                    android:textSize="14.7sp"
                    android:textColor="@color/theme_text"
                    android:layout_marginRight="20dp"/>
                <TextView
                    android:id="@+id/travel_order_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14.7sp"
                    android:textColor="@color/hotel_size"
                    android:text="sdsdsdsffdgfgsss"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_web"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="eeeeeeeeeeeeeeeeeeeeeeeeeeee"/>
    </LinearLayout>

    <include layout="@layout/item_loading"/>


</RelativeLayout>