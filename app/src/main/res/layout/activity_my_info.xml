<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_my_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tdin360.zjw.marathon.ui.activity.MyInfoActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/toolbar_layout"></include>
    <LinearLayout

        android:id="@+id/main"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

           <LinearLayout
               android:background="@drawable/image_oval_border"
               android:padding="3dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/signup_photo"
                />

    </LinearLayout>
        <TextView
            android:id="@+id/tip"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="点击头像更换"
            />
    </LinearLayout>

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TableLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:shrinkColumns="0"
        android:layout_weight="1"
        >
        <TableRow
            android:padding="10dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/textBlack"
                android:text="帐号:"
                />
            <EditText
                android:enabled="false"
                android:id="@+id/tel"
                android:textSize="15sp"
                android:background="@android:color/transparent"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/lineColor"
            ></View>
       <TableRow
           android:padding="10dp"
           >
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textSize="16sp"
             android:textColor="@color/textBlack"
             android:text="姓名:"
             />
         <EditText
             android:id="@+id/name"
             android:background="@android:color/transparent"
             android:layout_weight="1"
             android:textSize="15sp"
             android:layout_marginLeft="10dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"

             />
       </TableRow>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/lineColor"
            ></View>

        <TableRow
            android:padding="10dp"
            >

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="性别:"
                android:textColor="@color/textBlack"
                />
            <RadioGroup
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <RadioButton
                    android:clickable="false"
                    android:id="@+id/radio1"
                    android:drawableLeft="@drawable/gander_checked_selector"
                    android:button="@null"
                    android:drawablePadding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="男"
                    android:checked="true"

                    />
                <RadioButton
                    android:clickable="false"
                    android:id="@+id/radio2"
                    android:drawablePadding="5dp"
                    android:layout_marginLeft="30dp"
                    android:drawableLeft="@drawable/gander_checked_selector"
                    android:button="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="女"

                    />
            </RadioGroup>
        </TableRow>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/lineColor"
            ></View>
        <TableRow
            android:id="@+id/birthdayBtn"
            android:padding="10dp"
            >

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="生日:"
                android:textColor="@color/textBlack"
                />
            <TextView
                android:textSize="15sp"
                android:textColor="@color/textBlack"
                android:id="@+id/birthday"
                android:background="@android:color/transparent"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />
        </TableRow>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/lineColor"
            ></View>

        <TableRow
            android:padding="10dp"
            >

         <TextView

             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="16sp"
             android:text="邮箱:"
             android:textColor="@color/textBlack"
             />
         <EditText
             android:id="@+id/email"
             android:background="@android:color/transparent"
             android:layout_weight="1"
             android:textSize="15sp"
             android:layout_marginLeft="10dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"

             />
       </TableRow>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/lineColor"
            ></View>

    </TableLayout>

    <Button
        android:layout_margin="10dp"
        android:background="@drawable/oval_yellow_button_selector"
        android:id="@+id/edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="编辑"
        android:textSize="18sp"
        android:textColor="@color/white"

        />

    </LinearLayout
>
    </ScrollView>
</LinearLayout>
    </LinearLayout>


    <!--加载失败时显示提示-->
    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <include layout="@layout/layout_loadingfail"></include>
    </LinearLayout>

</RelativeLayout>
