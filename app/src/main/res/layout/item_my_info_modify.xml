<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/layout_modify_portrait"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:background="@color/white"
            android:padding="15dp">
            <ImageView
                android:id="@+id/iv_modify_headimg"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/my_portrait"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改头像"
                android:textColor="@color/hotel_address"
                android:layout_gravity="center"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/my_entry"
                android:layout_gravity="center"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_modify_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:orientation="horizontal"
            android:background="@color/white"
            android:padding="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改昵称"
                android:textColor="@color/theme_text"
                android:layout_gravity="center"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tv_modify_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改昵称修改昵称修改昵称"
                android:layout_marginRight="5dp"
                android:maxLength="5"
                android:ellipsize="end"
                android:textColor="@color/hotel_size"
                android:layout_gravity="center"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/my_entry"
                android:layout_gravity="center"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_modify_sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="修改签名"
                android:textColor="@color/theme_text" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_modify_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:maxLines="1"
                android:maxLength="30"
                android:ellipsize="end"
                android:text="修改签名修改签名修改签名"
                android:textColor="@color/hotel_address" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/my_entry" />

        </LinearLayout>
        <RadioGroup
            android:id="@+id/rg_modify_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:orientation="horizontal"
            android:background="@color/white"
            android:padding="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更改性别"
                android:textColor="@color/theme_text"
                android:layout_gravity="center"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
            <RadioButton
                android:id="@+id/rb_boy"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:button="@null"
                android:gravity="center"
                android:textColor="@drawable/modify_sex_text_check"
                android:text="男"
                android:drawableLeft="@drawable/modify_sex_check"
                android:layout_marginRight="30dp"
                android:layout_gravity="center"/>
            <RadioButton
                android:id="@+id/rb_girl"
                android:button="@null"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="女"
                android:gravity="center"
                android:textColor="@drawable/modify_sex_text_check"
                android:drawableLeft="@drawable/modify_sex_check"
                android:src="@drawable/my_entry"
                android:layout_marginRight="30dp"
                android:layout_gravity="center"/>
        </RadioGroup>
        <TextView
            android:id="@+id/tv_modify_psw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:background="@color/white"
            android:padding="15dp"
            android:visibility="gone"
            android:layout_marginTop="6dp"
            android:drawableRight="@drawable/my_entry"
            android:textColor="@color/theme_text"
            android:layout_gravity="center"/>
        <LinearLayout
            android:id="@+id/layout_modify_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:orientation="horizontal"
            android:background="@color/white"
            android:padding="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改手机号"
                android:textColor="@color/theme_text"
                android:layout_gravity="center"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tv_modify_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:textColor="@color/hotel_address"
                android:layout_gravity="center"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/my_entry"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/item_loading"/>


</RelativeLayout>