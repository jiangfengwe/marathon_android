<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_sig_up_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tdin360.zjw.marathon.ui.activity.MySigUpDetailActivity">
   <include layout="@layout/toolbar_layout"></include>
    <RadioGroup
        android:id="@+id/radioGroup"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <RadioButton
            android:checked="true"
            android:gravity="center"
            android:id="@+id/radio1"
            android:layout_weight="1"
            android:button="@null"
            android:textColor="@drawable/my_sig_up_details_title_selector"
            android:textSize="16dp"
            android:text="基本信息"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableBottom="@drawable/top_mysigup_selector"
            />


        <RadioButton

            android:gravity="center"
            android:id="@+id/radio2"
            android:layout_weight="1"
            android:button="@null"
            android:text="联系方式"
            android:textColor="@drawable/my_sig_up_details_title_selector"
            android:drawableBottom="@drawable/top_mysigup_selector"
            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <RadioButton

            android:gravity="center"
            android:id="@+id/radio3"
            android:textSize="16dp"
            android:layout_weight="1"
            android:drawableBottom="@drawable/top_mysigup_selector"
            android:button="@null"
            android:text="支付信息"
            android:textColor="@drawable/my_sig_up_details_title_selector"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RadioGroup>
    <View
        android:layout_width="match_parent"
        android:background="@color/lineColor"
        android:layout_height="0.5dp"></View>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
</LinearLayout>
