<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

      <ImageView
          android:id="@+id/imageView"
          android:scaleType="centerCrop"
          android:layout_width="match_parent"
          android:layout_height="180dp"
          android:src="@drawable/item" />
          <LinearLayout
              android:padding="10dp"
              android:layout_weight="1"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <TextView
                  android:ellipsize="end"
                  android:id="@+id/eventName"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textColor="@color/textBlack"
                  android:text="2016贵阳国际马拉松"
                  android:textSize="16sp" />
              <LinearLayout
                  android:layout_marginTop="2dp"
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
                  <TextView
                      android:drawablePadding="2dp"
                      android:gravity="center_vertical"
                      android:drawableLeft="@drawable/event_time"
                      android:textSize="14sp"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="报名:" />
                  <TextView
                      android:layout_marginLeft="5dp"
                      android:gravity="center_vertical"
                      android:drawablePadding="5dp"
                      android:textSize="14sp"
                      android:id="@+id/signUpTime"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="2017年7月5日" />

              </LinearLayout>

              <LinearLayout
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
              <LinearLayout
                  android:layout_weight="1"
                  android:layout_marginTop="2dp"
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
                  <TextView
                      android:drawablePadding="2dp"
                      android:gravity="center_vertical"
                      android:drawableLeft="@drawable/event_time"
                      android:textSize="14sp"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="比赛:"
                      />

                  <TextView
                      android:layout_marginLeft="5dp"
                      android:gravity="center_vertical"
                      android:textSize="14sp"
                      android:id="@+id/eventTime"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="2017年7月5日" />


              </LinearLayout>
                  <TextView
                      android:gravity="bottom"
                      android:layout_gravity="right"
                      android:id="@+id/status"
                      android:padding="2dp"
                      android:textSize="12sp"
                      android:background="@drawable/text_rect_border_selector"
                      android:textColor="@drawable/text_rect_color_selector"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="报行中" />
              </LinearLayout>
          </LinearLayout>



</LinearLayout>