<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tdin360.zjw.marathon.ui.activity.WebActivity">
    <LinearLayout
    android:padding="10dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@color/home_tab_title_color_check"
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/web_back" />
        <View
            android:layout_marginLeft="10dp"
            android:background="@color/dark"
            android:layout_width="0.5dp"
            android:layout_height="match_parent">
        </View>
        <ImageView
            android:id="@+id/close"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/close" />
    </LinearLayout>
    <TextView
        android:textColor="@color/white"
        android:id="@+id/title"
        android:ellipsize="end"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:maxLines="1"
        android:text="2017贵阳马拉松"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/more_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:src="@drawable/share" />
    <ImageView
        android:id="@+id/more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:scaleType="centerCrop"
        android:src="@drawable/refrash" />

</LinearLayout>
    <View
        android:background="@color/lineColor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"></View>
    <ProgressBar
        android:visibility="gone"
        android:id="@+id/progressBar"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="3dp" />
    <com.tencent.smtt.sdk.WebView
        android:id="@+id/mWebView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.tencent.smtt.sdk.WebView>
   <!-- <WebView
        android:id="@+id/mWebView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></WebView>-->
</LinearLayout>
