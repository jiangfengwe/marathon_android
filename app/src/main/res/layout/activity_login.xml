<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:background="@color/white"
    android:focusableInTouchMode="true"
    tools:context="com.tdin360.zjw.marathon.ui.activity.LoginActivity">

 <!--  <include layout="@layout/toolbar_layout"/>-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/iv_login_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/back_black"/>
            <TextView
                android:id="@+id/tv_login_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_title"
                android:textSize="18sp"
                android:textColor="@color/theme_text"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="35dp"
            android:textColor="@color/theme_text"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_area"
                android:textSize="16sp"
                android:textColor="@color/theme_text"/>
            <EditText
                android:id="@+id/et_login_phone"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="@string/login_phone"
                android:inputType="phone"
                android:textSize="16sp"
                android:lines="1"
                android:maxLength="11"
                android:layout_marginLeft="15dp"
                android:textColor="@color/hotel_address"/>
            <ImageView
                android:id="@+id/iv_login_cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:src="@drawable/login_cancel"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/hotel_division"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <EditText
                android:id="@+id/et_login_psw"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="@string/login_psw"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:inputType="textPassword"
                android:maxLength="18"
                android:lines="1"
                android:textColor="@color/hotel_address"/>
            <CheckBox
                android:id="@+id/cb_login_psw"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:button="@null"
                android:drawableRight="@drawable/login_psw_chect"/>
            <ImageView
                android:id="@+id/iv_login_psw_show"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:visibility="gone"
                android:layout_marginBottom="8dp"
                android:src="@drawable/login_psw_hide"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/hotel_division"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/tv_login_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:text="@string/login_forget"
            android:layout_marginTop="15dp"
            android:button="@null"
            android:layout_gravity="end"
            android:textColor="@color/hotel_level" />
        <Button
            android:id="@+id/btn_login_sure"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:background="@drawable/oval_green_button_selector" />
        <LinearLayout
            android:id="@+id/layout_login_weixin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/login_weixin"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_weixin"
                android:textColor="@color/hotel_address"
                android:textSize="10sp"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/item_loading"/>
