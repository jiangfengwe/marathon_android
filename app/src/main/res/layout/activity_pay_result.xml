<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pay_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textBlack"
    tools:context="com.tdin360.zjw.marathon.ui.activity.PayResultActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/toolbar_layout"></include>

    </LinearLayout>

    <RelativeLayout
        android:layout_margin="20dp"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:gravity="center_horizontal"
        android:layout_height="200dp">
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:drawablePadding="2dp"
            android:drawableLeft="@drawable/pay_checked"
            android:layout_width="wrap_content"
            android:textColor="@color/textBlack"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="支付成功!"

            />
        <TextView
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="恭喜您,报名成功!"
            android:textSize="18sp"
            />
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:onClick="click"
                android:id="@+id/details"
                android:background="@drawable/oval_red_button_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="查看详情"
                />
            <Button
                android:onClick="click"
                android:id="@+id/home"
                android:layout_marginLeft="40dp"
                android:background="@drawable/oval_red_button_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="返回首页"
                />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
