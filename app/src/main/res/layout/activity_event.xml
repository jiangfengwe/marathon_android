<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tdin360.zjw.marathon.ui.activity.EventActivity">
    <include layout="@layout/toolbar_layout"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp">
        <ImageView
            android:id="@+id/img_event"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/event_top"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignBottom="@id/img_event"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="8.5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="距离比赛还有"
                android:textSize="14sp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/event_day"
                android:textSize="14sp"
                android:text="09"
                android:textColor="@color/white"
                android:layout_width="22.3dp"
                android:background="@color/day_division"
                android:gravity="center"
                android:layout_height="15.5dp"
                android:layout_margin="2dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="天"
                android:textSize="14sp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/event_hour"
                android:textSize="14sp"
                android:text="16"
                android:textColor="@color/white"
                android:layout_width="22.3dp"
                android:background="@color/day_division"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_height="15.5dp"
                android:layout_margin="2dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小时"
                android:textSize="14sp"
                android:textColor="@color/white"/>
        </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@color/background"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/white"
        android:orientation="horizontal">
        <View
            android:layout_width="20dp"
            android:layout_height="0.5dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:background="@color/theme_division"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="赛事专题"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="15dp"
            android:textColor="@color/theme_text"
            android:textSize="14.7sp"/>
        <View
            android:layout_width="20dp"
            android:layout_height="0.5dp"
            android:layout_gravity="center"
            android:background="@color/theme_division"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="10sp"
            android:textColor="@color/theme_text"
            android:text="赛事介绍"
            android:gravity="center"
            android:layout_marginBottom="14dp"
            android:drawableTop="@drawable/event_introduce"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="10sp"
            android:textColor="@color/theme_text"
            android:text="赛事新闻"
            android:layout_marginBottom="14dp"
            android:gravity="center"
            android:drawableTop="@drawable/event_news"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="10sp"
            android:gravity="center"
            android:textColor="@color/theme_text"
            android:text="赛事公告"
            android:layout_marginBottom="14dp"
            android:drawableTop="@drawable/event_notice"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/background"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/white"
        android:orientation="horizontal">
        <View
            android:layout_width="20dp"
            android:layout_height="0.5dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:background="@color/theme_division"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="参赛信息"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="15dp"
            android:textColor="@color/theme_text"
            android:textSize="14.7sp"/>
        <View
            android:layout_width="20dp"
            android:layout_height="0.5dp"
            android:layout_gravity="center"
            android:background="@color/theme_division"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="10sp"
            android:textColor="@color/theme_text"
            android:text="报名信息"
            android:gravity="center"
            android:layout_marginBottom="14dp"
            android:drawableTop="@drawable/event_apply"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="10sp"
            android:textColor="@color/theme_text"
            android:text="我的团队"
            android:layout_marginBottom="14dp"
            android:gravity="center"
            android:drawableTop="@drawable/event_team"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="10sp"
            android:gravity="center"
            android:textColor="@color/theme_text"
            android:text="我的物资"
            android:layout_marginBottom="14dp"
            android:drawableTop="@drawable/event_goods"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="10sp"
            android:gravity="center"
            android:textColor="@color/theme_text"
            android:text="我的成绩"
            android:layout_marginBottom="14dp"
            android:drawableTop="@drawable/event_grade"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="10sp"
            android:gravity="center"
            android:textColor="@color/theme_text"
            android:text="反馈建议"
            android:layout_marginBottom="14dp"
            android:drawableTop="@drawable/event_feedback"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/background"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">
        <ImageView
            android:id="@+id/iv_hotel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="90dp"
            android:src="@drawable/event_hotel"
            android:scaleType="centerCrop"
           android:layout_margin="10dp"/>
        <ImageView
            android:id="@+id/iv_travel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/event_travel"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center">
        <TextView
            android:id="@+id/apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即报名"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/event_apply_normal"
            android:textColor="@color/white"/>

    </LinearLayout>
    </LinearLayout>
    <com.tencent.smtt.sdk.WebView
        android:id="@+id/event_webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
