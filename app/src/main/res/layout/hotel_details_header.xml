<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <android.support.v4.view.ViewPager
            android:id="@+id/galleryView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>
         <LinearLayout
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:background="#9f000000"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/title"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                />
            <TextView
                android:id="@+id/textCountTip"
                android:text="1/1"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/hotel_name"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="@color/textBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="酒店名称"
                />
            <TextView
                android:id="@+id/hotel_price"
                android:textSize="18sp"
                android:textColor="@color/yellow_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥128"
                />

        </LinearLayout>

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/hotel_Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/textBlack"
        android:textSize="15sp"
        android:text="CanRefresh是一个刷新控件"
        />
    <TextView
        android:drawablePadding="5dp"
        android:id="@+id/hotel_tel"
        android:textSize="12sp"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:autoLink="phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/hotel_tel"
        android:text="15761628423"
        />
    <TextView
        android:textColor="@color/textBlack"
        android:textSize="12sp"
        android:drawablePadding="5dp"
        android:layout_marginTop="5dp"
        android:id="@+id/hotel_address"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/hotel_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="地址"
        />
    </LinearLayout>
    <View
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="10dp"></View>
</LinearLayout>