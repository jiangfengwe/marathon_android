<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/white"
        android:paddingTop="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="酒店类型"
            android:layout_marginBottom="15dp"
            android:textSize="14.7sp"
            android:textColor="@color/theme_text"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/layout_choose_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            </LinearLayout>

        </LinearLayout>
        <RadioGroup
            android:id="@+id/rg_room_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rg_room_haohua"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/hotel_text_bg_selector"
                android:textSize="12sp"
                android:text="豪华型"
                android:button="@null"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:textColor="@drawable/home_tab_text_selector"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/rg_room_jingji"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/hotel_text_bg_selector"
                android:textSize="12sp"
                android:text="经济型"
                android:button="@null"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:textColor="@drawable/home_tab_text_selector"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/rg_room_qinzi"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/hotel_text_bg_selector"
                android:textSize="12sp"
                android:text="亲子型"
                android:button="@null"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:textColor="@drawable/home_tab_text_selector"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/rg_room_qinglv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/hotel_text_bg_selector"
                android:textSize="12sp"
                android:text="情侣型"
                android:button="@null"
                android:gravity="center"
                android:textColor="@drawable/home_tab_text_selector"
                android:layout_height="wrap_content" />
        </RadioGroup>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="价格区间"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="15dp"
            android:textSize="14.7sp"
            android:textColor="@color/theme_text"/>
        <RadioGroup
            android:id="@+id/rg_price_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp">
            <RadioButton
                android:id="@+id/rg_room_one"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/hotel_text_bg_selector"
                android:textSize="12sp"
                android:text="￥400以下"
                android:button="@null"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:textColor="@drawable/home_tab_text_selector"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/rg_room_two"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/hotel_text_bg_selector"
                android:textSize="12sp"
                android:text="￥400-800"
                android:button="@null"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:textColor="@drawable/home_tab_text_selector"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/rg_room_three"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/hotel_text_bg_selector"
                android:textSize="12sp"
                android:text="￥800-1000"
                android:button="@null"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:textColor="@drawable/home_tab_text_selector"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/rg_room_four"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/hotel_text_bg_selector"
                android:textSize="12sp"
                android:text="￥1000以上"
                android:button="@null"
                android:gravity="center"
                android:textColor="@drawable/home_tab_text_selector"
                android:layout_height="wrap_content" />

        </RadioGroup>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_room_sure"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/home_tab_title_color_check"
        android:text="@string/login_sure"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:gravity="center"/>




</LinearLayout>