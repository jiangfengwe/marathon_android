<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_marathon_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.tdin360.zjw.marathon.ui.activity.MarathonDetailsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    <include layout="@layout/toolbar_layout"></include>



        <android.support.v7.widget.RecyclerView
             android:layout_weight="1"
            android:background="@color/white"
            android:id="@+id/mRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
   <LinearLayout

       android:background="@color/white"
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <Button

           android:layout_weight="1"
           android:id="@+id/signBtn"
           android:onClick="toSignUp"
           android:text="个人报名"
           android:textSize="16sp"
           android:textColor="@color/white"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@drawable/rect_yellow_button_selector"
           />
       <Button

           android:layout_marginLeft="1dp"
           android:layout_weight="1"
           android:id="@+id/signTeam"
           android:onClick="toSignUp"
           android:text="团队报名"
           android:textSize="16sp"
           android:textColor="@color/white"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@android:color/holo_red_light"
           />
   </LinearLayout>
       <View
           android:visibility="gone"
            android:id="@+id/isEnable"
           android:clickable="true"
           android:background="#7f000000"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           />
    </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:orientation="vertical"
        android:id="@+id/panel"
        android:layout_marginTop="50dp"
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </LinearLayout>
    <!--加载失败时显示提示-->
    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <include layout="@layout/layout_loadingfail"></include>
    </LinearLayout>

</RelativeLayout>
