<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hotel_division"
    tools:context="com.tdin360.zjw.marathon.ui.activity.PublishActivity">
   <android.support.design.widget.AppBarLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <android.support.v7.widget.Toolbar
           android:id="@+id/toolbar_publish"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@color/home_tab_title_color_check">
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginRight="10dp">
               <TextView
                   android:id="@+id/tv_publish_cancel"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="取消"
                   android:textSize="18sp"
                   android:textColor="@color/white"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="写点儿啥"
                   android:textSize="18sp"
                   android:layout_centerInParent="true"
                   android:textColor="@color/white"/>
               <TextView
                   android:id="@+id/tv_publish"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="发布"
                   android:textSize="18sp"
                   android:layout_alignParentRight="true"
                   android:textColor="@color/white"/>
           </RelativeLayout>

       </android.support.v7.widget.Toolbar>
   </android.support.design.widget.AppBarLayout>
    <EditText
        android:id="@+id/et_publish_content"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/white"
        android:layout_marginTop="7dp"
        android:padding="10dp"
        android:textColor="@color/hotel_address"
        android:maxLength="140"
        android:gravity="top"
        android:hint="为佰家星球添加点重力吧..."/>
    <TextView
        android:id="@+id/tv_publish_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/hotel_address"
        android:textSize="14sp"
        android:text="140"
        android:background="@color/white"
        android:paddingRight="10dp"
        android:gravity="right"/>
    <LinearLayout
        android:id="@+id/layout_publish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="20dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add_pic"
            android:scaleType="centerCrop"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加图片"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/circle_message_add"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="12sp"
        android:text="@string/circle_publish"
        android:textColor="@color/division"/>




</LinearLayout>
