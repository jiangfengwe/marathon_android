<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/layout_choose_time"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="@drawable/travel_time_order"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="选择出发时间"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:textColor="@color/travel_out_time"/>
            <TextView
                android:id="@+id/tv_travel_choose_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="2017"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:textColor="@color/travel_out_time"/>
            <TextView
                android:id="@+id/tv_travel_choose_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="1-2"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:textColor="@color/travel_out_time"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@color/white"
            android:padding="15dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/theme_text"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:text="购买票数"/>
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:background="@drawable/shape_travel"
                android:layout_alignParentRight="true">
                <TextView
                    android:id="@+id/tv_travel_order_dec"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:text="-"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/hotel_phone_division"/>
                <TextView
                    android:id="@+id/tv_travel_order_sum"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/home_tab_title_color_check"
                    android:layout_gravity="center"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:text="1"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/hotel_phone_division"/>
                <TextView
                    android:id="@+id/tv_travel_order_add"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:text="+"/>

            </LinearLayout>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/theme_text"
                android:textSize="16sp"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingBottom="10dp"
                android:text="游客信息"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/layout_name"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical">
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_ic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="10dp"
                    android:orientation="vertical">
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@color/white"
            android:padding="15dp"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/theme_text"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:text="@string/hotel_room_phone"/>
            <EditText
                android:id="@+id/et_travel_order_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:background="@null"
                android:inputType="phone"
                android:maxLength="11"
                android:layout_gravity="center"
                android:hint="@string/hotel_room_msg"/>
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/load_fail_layout"/>
    <include layout="@layout/item_loading"/>
</RelativeLayout>