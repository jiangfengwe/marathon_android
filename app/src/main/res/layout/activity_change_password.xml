<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context="com.tdin360.zjw.marathon.ui.activity.RestPassWordActivity">
    <include layout="@layout/toolbar_layout"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:background="@color/white"
        android:paddingRight="10dp">
        <EditText
            android:id="@+id/et_change_psw_old"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="@string/change_psw_old"
            android:layout_marginBottom="8dp"
            android:textSize="14.7sp"
            android:inputType="textPassword"
            android:maxLength="18"
            android:lines="1"
            android:textColor="@color/hotel_address"/>
        <ImageView
            android:id="@+id/iv_change_psw_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:src="@drawable/login_cancel"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:background="@color/white"
        android:paddingRight="10dp">
        <EditText
            android:id="@+id/et_change_psw_new"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="@string/change_psw_new"
            android:layout_marginBottom="8dp"
            android:textSize="14.7sp"
            android:inputType="textPassword"
            android:maxLength="18"
            android:lines="1"
            android:textColor="@color/hotel_address"/>
        <CheckBox
            android:id="@+id/cb_change_psw"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@null"
            android:drawableRight="@drawable/login_psw_chect"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_change_psw_sure"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_sure"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:background="@drawable/oval_green_button_selector" />


