<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout

        android:id="@+id/pop_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >
       <LinearLayout
           android:id="@+id/btn_aliPay"
           android:orientation="horizontal"
           android:layout_marginLeft="20dip"
           android:layout_marginRight="20dip"
           android:layout_marginTop="20dip"
           android:gravity="center"
           android:padding="5dp"
           android:background="@drawable/popwindow_pay_button_background"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/textBlack"
               android:gravity="center_vertical"
               android:drawablePadding="5dp"
               android:text=" 支 付 宝"
               android:drawableLeft="@drawable/alipay_icon"
               android:textStyle="bold"
               />
       </LinearLayout>


    <LinearLayout
        android:id="@+id/btn_wXPay"
        android:orientation="horizontal"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:gravity="center"
        android:padding="5dp"
        android:layout_marginTop="5dip"
        android:background="@drawable/popwindow_pay_button_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
           android:drawableLeft="@drawable/weixinpay_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:drawablePadding="5dp"
            android:text="微信支付"
            android:textColor="@color/textBlack"
            android:textStyle="bold"
            />
        </LinearLayout>


        <LinearLayout
            android:padding="5dp"
            android:id="@+id/btn_yLianPLAY"
            android:orientation="horizontal"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:gravity="center"
            android:layout_marginTop="5dip"
            android:background="@drawable/popwindow_pay_button_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/yinlianpay_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="银联支付"
                android:textColor="@color/textBlack"
                android:textStyle="bold"
                />
        </LinearLayout>

        <Button
            android:id="@+id/btn_cancel"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="15dip"
            android:layout_marginBottom="15dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textColor="@color/textBlack"
            android:background="@drawable/popwindow_pay_button_background"
            android:textStyle="bold"

            />
    </LinearLayout>
    </RelativeLayout>