<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.tdin360.zjw.marathon.ui.activity.CircleDetailActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_circle_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/home_tab_title_color_check">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp">
                    <ImageView
                        android:id="@+id/iv_circle_detail_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:src="@drawable/back"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:id="@+id/iv_circle_detail_portrait"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/circle_detail_portrait"/>
                    <TextView
                        android:id="@+id/iv_circle_detail_name"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        android:text="å•¥"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="16sp"
                        android:layout_centerInParent="true"
                        android:textColor="@color/white"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>
                </LinearLayout>

            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>
        <com.liaoinstan.springview.widget.SpringView
            android:id="@+id/springView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_circle_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.liaoinstan.springview.widget.SpringView>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/hotel_division"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp">
            <EditText
                android:id="@+id/et_circle_detail_comment"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@null"
                android:textSize="14.7sp"
                android:textColor="@color/circle_detail_comment"
                android:hint="@string/comment_hint"/>
            <Button
                android:id="@+id/btn_circle_detail_comment"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="@string/comment_sure"
                android:textColor="@color/white"
                android:textSize="13.3sp"
                android:background="@drawable/shape_hotel_order"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/load_fail_layout"/>
    <include layout="@layout/item_loading"/>


</RelativeLayout>
