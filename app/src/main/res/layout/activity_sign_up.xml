<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tdin360.zjw.marathon.ui.activity.SignUpActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
   <include layout="@layout/toolbar_layout"></include>

  <LinearLayout
      android:id="@+id/main"
      android:visibility="visible"
      android:layout_width="match_parent"
      android:orientation="vertical"
      android:layout_height="match_parent">

<com.tdin360.zjw.marathon.weight.AutoText
    android:id="@+id/autoText"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:padding="5dp"
    android:textColor="@android:color/holo_red_dark"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

      <View
          android:background="@color/lineColor"
          android:layout_width="match_parent"
          android:layout_height="0.5dp"></View>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout


            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:padding="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/textBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓        名:"
                    />
                <EditText
                    android:layout_marginLeft="5dp"
                    android:id="@+id/name"
                    android:hint="请输入真实姓名"
                    android:layout_weight="1"
                    android:textColor="@color/textBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"

                    />
            </LinearLayout>
            <View
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/lineColor"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"></View>
            <LinearLayout
                android:padding="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/textBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手  机  号:"
                    />
                <EditText
                    android:layout_marginLeft="5dp"
                    android:id="@+id/phone"
                    android:textColor="@color/textBlack"
                    android:maxLength="11"
                    android:inputType="phone"
                    android:layout_weight="1"
                    android:hint="请输入手机号码"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    />
            </LinearLayout>
            <View
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/lineColor"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"></View>
            <LinearLayout
                android:padding="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/textBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:text="邮        箱:"
                    />
                <EditText

                    android:layout_marginLeft="5dp"
                    android:id="@+id/email"
                    android:hint="请输入邮箱"
                    android:inputType="textEmailAddress"
                    android:layout_weight="1"
                    android:textColor="@color/textBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    />
            </LinearLayout>
            <View
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/lineColor"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"></View>
            <LinearLayout

                 android:padding="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/textBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="出生日期:"
                    />
                <EditText
                    android:editable="false"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/dateSelect"
                    android:layout_weight="1"
                    android:hint="请选择出生日期"
                    android:textColor="@color/textBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    />

            </LinearLayout>
            <View
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/lineColor"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"></View>
            <LinearLayout

                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/textBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="证件类型:"
                    />
                <Spinner
                    android:layout_marginLeft="5dp"
                    android:id="@+id/idCardType"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    style="@android:style/Widget.Spinner"
                    />

            </LinearLayout>
            <View
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/lineColor"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"></View>
            <LinearLayout
                 android:padding="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/textBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="证件号码:"
                    />
                <EditText
                    android:layout_marginLeft="5dp"
                    android:id="@+id/idCardNumber"
                    android:layout_weight="1"
                    android:hint="请输入证件号码"
                    android:layout_width="match_parent"
                    android:textColor="@color/textBlack"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    />
            </LinearLayout>
            <View
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/lineColor"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"></View>
            <LinearLayout
                android:padding="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/textBlack"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性        别:"
                    />
                <RadioGroup
                    android:layout_marginLeft="15dp"
                    android:id="@+id/radioGroup"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/radio1"
                        android:button="@null"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/gander_checked_selector"
                        android:text="男"
                        android:drawablePadding="5dp"
                        android:checked="true"
                        android:textSize="16sp"
                        />
                    <RadioButton
                        android:id="@+id/radio2"
                        android:button="@null"
                        android:drawableLeft="@drawable/gander_checked_selector"
                        android:layout_marginLeft="50dp"
                        android:drawablePadding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="女"
                        />
                </RadioGroup>
            </LinearLayout>
            <View
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/lineColor"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"></View>
            <LinearLayout
                android:padding="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/textBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="血        型:"
                    />
                <Spinner
                    android:layout_marginLeft="5dp"
                    android:id="@+id/bloodSpinner"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:entries="@array/bloodList"
                    style="@android:style/Widget.Spinner"
                    />

            </LinearLayout>

            <View
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/lineColor"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"></View>
            <LinearLayout
                android:padding="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/textBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="国        家:"
                    />
                <Spinner
                    android:layout_marginLeft="5dp"
                    android:id="@+id/country"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:entries="@array/CountryList"
                    style="@android:style/Widget.Spinner"
                    />

            </LinearLayout>

            <View
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/lineColor"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"></View>
            <LinearLayout
               android:padding="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/textBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所  在  地:"
                    />
                <EditText

                    android:focusable="false"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/areaAddress"
                    android:hint="请选择所在地"
                    android:textColor="@color/textBlack"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    />

            </LinearLayout>
            <View
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/lineColor"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"></View>
            <LinearLayout

                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/textBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="报名项目:"
                    />
                <Spinner
                    android:layout_marginLeft="5dp"
                    android:id="@+id/projectSpinner"
                    android:layout_weight="1"
                    style="@android:style/Widget.Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    />

            </LinearLayout>
            <View
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/lineColor"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"></View>
            <LinearLayout

                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/textBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服装尺码:"
                    />
                <Spinner
                    android:layout_marginLeft="5dp"
                    android:id="@+id/clothesSize"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@android:style/Widget.Spinner"
                    android:background="@android:color/transparent"

                    />

            </LinearLayout>
            <View
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/lineColor"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"></View>

            <LinearLayout
                android:padding="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/textBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="现居地址:"
                    />
                <EditText
                    android:layout_marginLeft="5dp"
                    android:id="@+id/address"
                    android:layout_weight="1"
                    android:hint="请输入现居地址"
                    android:textColor="@color/textBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    />
            </LinearLayout>

            <View
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/lineColor"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"></View>
            <LinearLayout
                android:padding="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16sp"

                    android:textColor="@color/textBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="邮政编码:"
                    />
                <EditText
                    android:hint="请输入邮政编码"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/post"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:maxLength="6"
                    android:textColor="@color/textBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    />
            </LinearLayout>
            <View
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/lineColor"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"></View>
            <LinearLayout
                android:padding="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/textBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="紧急联系人:"
                    />
                <EditText
                    android:hint="请输入紧急联系人姓名"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/linkName"
                    android:layout_weight="1"
                    android:textColor="@color/textBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    />
            </LinearLayout>
            <View
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/lineColor"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"></View>
            <LinearLayout
                android:padding="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/textBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="紧急联系电话:"
                    />
                <EditText
                    android:hint="请输入紧急联系人电话"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/linkPhone"
                    android:inputType="phone"
                    android:layout_weight="1"
                    android:maxLength="11"
                    android:textColor="@color/textBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    />
            </LinearLayout>
            <View
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/lineColor"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"></View>

            <LinearLayout
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/textBlack"
                    android:text="健康证明:(点击图片上传)"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@color/red"
                    android:text="@string/intro"
                    />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:id="@+id/imageView"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxHeight="160dp"
                        android:scaleType="fitStart"
                        android:adjustViewBounds="true"
                        android:src="@drawable/add_pic"
                        />

                     <RelativeLayout
                         android:layout_centerInParent="true"
                         android:id="@+id/progressBar"
                         android:visibility="gone"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content">
                         <ProgressBar
                             android:background="#8f000000"
                             android:layout_centerInParent="true"
                             style="@android:style/Widget.Holo.ProgressBar.Large"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"

                             />
                         <TextView
                             android:layout_centerInParent="true"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:textSize="12sp"
                             android:textColor="@color/white"
                             android:text="处理中"
                             />

                     </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="90dp">
                <Button
                    android:layout_gravity="center"
                    android:id="@+id/submitBtn"
                    android:textColor="@android:color/white"
                    android:background="@drawable/oval_yellow_button_selector"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="提交"
                    />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
  </LinearLayout>
    </LinearLayout>

    <!--加载失败时显示提示-->
    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <include layout="@layout/layout_loadingfail"></include>
    </LinearLayout>
</RelativeLayout>
