<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_all_hotel_comment_pic"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/hotel_portrait"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_all_hotel_comment_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小李"
                android:textSize="12sp"
                android:textColor="@color/home_tab_title_color_check"/>
            <TextView
                android:id="@+id/tv_all_hotel_comment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-06-08"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/hotel_date"/>
            <TextView
                android:id="@+id/tv_all_hotel_comment_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/hotel_comment"
                android:textSize="14sp"
                android:text="ttttttttttttttttgggggggggggg"/>

        </LinearLayout>
    </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_hotel_comment_pic"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"/>
</LinearLayout>