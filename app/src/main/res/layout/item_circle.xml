<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@color/hotel_division"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_circle_portrait"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/circle_portrait"
            android:layout_gravity="center"
            android:layout_marginRight="6dp"
            android:scaleType="centerCrop"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="荐客家"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="18dp"
            android:textSize="12sp"
            android:textColor="@color/home_tab_title_color_check"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12-12"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:textColor="@color/circle_head_time"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="荐客家神经病荐客家神经病荐客家神经病荐客家神经病荐客家神经病荐客家神经病荐客家神经病荐客家神经病荐客家神经病"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="14.7sp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/circle_head_time"/>
    <com.lzy.ninegrid.NineGridView
        android:id="@+id/circle_nineGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="6dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="15dp"
        android:paddingTop="20dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_circle_look"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2309"
            android:textSize="13.3sp"
            android:drawableLeft="@drawable/circle_look"
            android:textColor="@color/circle_head_time"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_circle_praise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:drawableLeft="@drawable/circle_praise_check"
            android:textSize="11.3sp"
            android:textColor="@color/circle_head_time"/>
        <TextView
            android:id="@+id/tv_circle_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:drawableLeft="@drawable/circle_comment"
            android:textSize="11.3sp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/circle_head_time"/>
        <TextView
            android:id="@+id/tv_circle_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:drawableLeft="@drawable/circle_share_check"
            android:textSize="11.3sp"
            android:textColor="@color/circle_head_time"/>

    </LinearLayout>

</LinearLayout>