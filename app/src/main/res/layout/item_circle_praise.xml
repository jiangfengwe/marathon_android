<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@drawable/recycler_item_selector"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_praise_list_portrait"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/circle_portrait"
        android:layout_marginRight="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_praise_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14.7sp"
            android:textColor="@color/home_tab_title_color_check"
            android:text="掌声"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/tv_praise_list_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14.7sp"
            android:textColor="@color/hotel_size"
            android:text="机顶盒仿VB有人家开发就会改变就会放过"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/hotel_division"
            android:layout_marginBottom="15dp"/>

    </LinearLayout>


</LinearLayout>